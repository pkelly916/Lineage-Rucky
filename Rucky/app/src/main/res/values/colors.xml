    <color name="pri_dark">#000000</color>
    <color name="sec_dark">#212121</color>
    <color name="pri_light">#ffffff</color>
    <color name="sec_light">#bdbdbd</color>

    <!-- dots inactive colors -->
    <color name="dot_dark_screen">@color/pri_light</color>

    <!-- dots active colors -->
    <color name="dot_light_screen">@color/accent</color>

    <array name="array_dot_active">
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
        <item>@color/dot_light_screen</item>
    </array>

    <array name="array_dot_inactive">
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
        <item>@color/dot_dark_screen</item>
    </array>

    <color name="transparent_black">#00000000</color>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/accent</color>


</resources>
