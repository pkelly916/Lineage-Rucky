<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/pri_light</item>
        <item name="android:colorForeground">@color/sec_light</item>
        <item name="colorPrimary">@color/pri_light</item>
        <item name="colorPrimaryDark">@color/sec_light</item>
        <item name="android:textColorPrimary">@color/pri_dark</item>
        <item name="android:textColorPrimaryInverse">@color/sec_light</item>
        <item name="android:textColorSecondary">@color/sec_dark</item>
        <item name="android:textColorSecondaryInverse">@color/pri_light</item>
        <item name="android:windowBackground">@color/pri_light</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/pri_dark
        </item>
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/pri_dark
        </item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertLight</item>
        <item name="alertDialogStyle">@style/AlertLight</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/pri_dark</item>
        <item name="android:colorForeground">@color/sec_dark</item>
        <item name="colorPrimary">@color/pri_dark</item>
        <item name="colorPrimaryDark">@color/sec_dark</item>
        <item name="android:textColorPrimary">@color/pri_light</item>
        <item name="android:textColorPrimaryInverse">@color/sec_dark</item>
        <item name="android:textColorSecondary">@color/sec_light</item>
        <item name="android:textColorSecondaryInverse">@color/pri_dark</item>
        <item name="android:windowBackground">@color/pri_dark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/pri_dark
        </item>
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">
            @color/pri_dark
        </item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDark</item>
        <item name="alertDialogStyle">@style/AlertDark</item>
    </style>

    <style name="AlertLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Alert.Button</item>
        <item name="android:windowBackground">@drawable/dialog_light</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">@null</item>
        <item name="android:ambientShadowAlpha" tools:targetApi="lollipop">@null</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@null</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@null</item>
        <item name="android:spotShadowAlpha" tools:targetApi="lollipop">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="AlertDark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Alert.Button</item>
        <item name="android:windowBackground">@drawable/dialog_dark</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">@null</item>
        <item name="android:ambientShadowAlpha" tools:targetApi="lollipop">@null</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@null</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@null</item>
        <item name="android:spotShadowAlpha" tools:targetApi="lollipop">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Alert.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent_black</item>
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent</item>
    </style>

    <style name="Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/transparent_black</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">0sp</item>
        <item name="backgroundTint">@color/transparent_black</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@color/transparent_black</item>
        <item name="iconTint">@color/accent</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="InitButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent_black</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="PreferenceFragment.Material" tools:override="true">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
