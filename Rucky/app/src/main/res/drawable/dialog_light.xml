<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/accent"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:type="linear"
                android:gradientRadius="50%p"
                android:centerColor="@color/pri_light"
                android:startColor="@color/transparent_black"
                android:endColor="@color/transparent_black"
                android:angle="180"
                android:dither="true"
                android:antialias="true"
                android:useLevel="true" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:type="linear"
                android:gradientRadius="50%p"
                android:centerColor="@color/pri_light"
                android:startColor="@color/transparent_black"
                android:endColor="@color/transparent_black"
                android:angle="90"
                android:dither="true"
                android:antialias="true"
                android:useLevel="true" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:top="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/pri_light"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>